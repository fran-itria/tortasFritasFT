{
  "name": "tortas-fritas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Tortas Fritas FT project",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "frontend": "pnpm --filter frontend",
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter frontend start",
    "lint": "eslint -c ./eslint.config.mjs",
    "lint:fix": "pnpm lint --fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install-all": "pnpm install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "typescript": "5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
